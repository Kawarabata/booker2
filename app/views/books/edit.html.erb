<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <%= @book.errors.count %> <%= 'error'.pluralize(@book.errors.count) %>.
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render 'books/form', book: @book %>

<%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %>