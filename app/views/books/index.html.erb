<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @books.each do |book| %>
      <td>
        <%= link_to user_path(book.user.id) do %>
          <%= attachment_image_tag book.user.profile_image_id, :image %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    <% end %>
    </tr>
  </tbody>
</table>
