<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/1cd7551525.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to 'Bookers', root_path, class: "navbar-brand" %>
          <div class="collapsenavbar-collapse">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li><%= link_to 'Home', current_user, class:'fas fa-home nav-link text-light' %></li>
              <li><%= link_to 'Users', users_path, class:'fas fa-users nav-link text-light' %></li>
              <li><%= link_to 'Books', books_path, class:'fas fa-book-open nav-link text-light' %></li>
              <li><%= link_to 'logout', destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %></li>
              <% else %>
              <li><%= link_to 'Home', root_path, class:'fas fa-home nav-link text-light' %></li>
              <li><%= link_to 'About', home_about_path, class: 'fas fa-link nav-link text-light' %></li>
              <li><%= link_to 'sign up', new_user_registration_path, class: 'fas fa-user-plus nav-link text-light' %></li>
              <li><%= link_to 'login', new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <p id="notice">
        <% flash.each do |message_type, message| %>
          <%= message %>
        <% end %>
      </p>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <% if current_user && !@hide_user_info %>
          <div class="col-md-3">
            <h2>User info</h2>
            <% if controller.controller_name.in?(%w[books users]) && controller.action_name == 'show' %>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: '100x100' %>
              <table class="table">
                <tbody>
                  <tr>
                    <th>name</th>
                    <th><%= @user.name %></th>
                  </tr>
                  <tr>
                    <th>introduction</th>
                    <th><%= @user.introduction %></th>
                  </tr>
                </tbody>
              </table>
              <div class="row">
                <%= link_to '', edit_user_path(@user), class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>
              </div>
            <% else %>
              <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: '100x100' %>
              <table class="table">
                <tbody>
                  <tr>
                    <th>name</th>
                    <th><%= current_user.name %></th>
                  </tr>
                  <tr>
                    <th>introduction</th>
                    <th><%= current_user.introduction %></th>
                  </tr>
                </tbody>
              </table>
              <div class="row">
                <%= link_to '', edit_user_path(current_user), class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>
              </div>
            <% end %>
            <h2>New book</h2>
            <% if @book && @book.errors.any? %>
              <div class="alert alert-warning">
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <%= form_with model: Book.new, local: true do |f| %>
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class:'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, class: 'form-control' %>
              </div>
              <%= f.submit 'Create Book', class: 'btn btn-success' %>
            <% end %>
          </div>
          <% end %>
          <div class="col-md-8 offset-md-1">
            <%= yield %>
          </div>
        </div>
      </div>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Karawabata</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
